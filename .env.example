# ========================================
# PREDICTION ALERT BOT - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in the values
# Command: Copy-Item .env.example .env  (Windows PowerShell)
#
# NEVER commit .env file to git - it contains secrets!
# ========================================

# ========================================
# REQUIRED: Discord ConfigurationwdAD
# ========================================

# Your Discord bot token (REQUIRED)
# Get it from: https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Channel ID where alerts will be posted (REQUIRED)
# Enable Developer Mode in Discord -> Right-click channel -> Copy Channel ID
DISCORD_ALERT_CHANNEL_ID=your_channel_id_here

# ========================================
# OPTIONAL: Discord Advanced Settings
# ========================================

# Application/Client ID (needed for slash commands like /scan)
DISCORD_CLIENT_ID=

# Server/Guild ID (needed for slash commands)
DISCORD_GUILD_ID=

# Admin Role ID (optional - allows that role to use admin commands)
DISCORD_ADMIN_ROLE_ID=

# Your Discord User ID (optional - gives you admin access)
DISCORD_OWNER_ID=

# ========================================
# OPTIONAL: API Keys (Improves Rate Limits)
# ========================================

POLY_API_KEY=
KALSHI_API_KEY=
KALSHI_API_SECRET=

# ========================================
# OPTIONAL: Bot Behavior Configuration
# ========================================

SCAN_INTERVAL_MINUTES=2
MIN_CONFIDENCE=55
MIN_LIQUIDITY=500
MAX_MARKET_AGE_MINUTES=2880
DUPLICATE_SUPPRESSION_MINUTES=120
API_TIMEOUT_MS=10000
RATE_LIMIT_PAUSE_MS=300000
USER_AGENT=PredictionAlertBot/1.0 (+https://github.com/your-handle; contact@example.com)
LOG_LEVEL=info
